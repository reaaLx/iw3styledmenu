		CHOICE_BUTTON( 4, "@CLASS_DEFAULT_DEMOLITIONS", open "popup_cac_defaultclasswarning_demolitions"; )
		CHOICE_BUTTON( 5, "@CLASS_DEFAULT_SNIPER", 		open "popup_cac_defaultclasswarning_sniper"; )
