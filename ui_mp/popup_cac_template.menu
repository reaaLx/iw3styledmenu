		PREPROC_SHADER_DRAW( 0 -4 (CHOICE_POPUP_WIDTH+4) CHOICE_POPUP_HEIGHT( ITEM_NUM ), 0 0, "gradient_fadein", 0 0 0 0.7, 1, CHOICE_POPUP_BORDER_WIDTH, CHOICE_POPUP_BORDER_COLOR )

